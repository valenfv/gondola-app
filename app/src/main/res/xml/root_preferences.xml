<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Configuracion de conexion">

        <EditTextPreference
            app:key="ip"
            app:title="URL del servidor"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="port"
            app:title="Puerto"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="Configuracion de listas de precio">

        <EditTextPreference
            app:key="lista"
            app:title="Lista de precios"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>


</PreferenceScreen>
